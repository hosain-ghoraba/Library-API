generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Book {
  id                Int         @id @default(autoincrement())
  title             String
  author            String
  isbn              String      @unique
  baseQuantity      Int
  availableQuantity Int
  // for simplicity, assume there is only 1 shelf location regardless of the book quantity
  shelfLocation     String      @unique
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  borrowingRecords  Borrowing[]

  @@index(title)
  @@index(author)
}

model Borrower {
  id               Int         @id @default(autoincrement())
  name             String
  email            String      @unique
  hashedPassword   String
  registeredDate   DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  borrowingRecords Borrowing[]
}

model Borrowing {
  id         Int       @id @default(autoincrement())
  borrowerId Int
  bookId     Int
  borrowedAt DateTime  @default(now())
  dueDate    DateTime // calculated & set when creating the record in the controller
  returnedAt DateTime? // NULL = not returned yet
  borrower   Borrower  @relation(fields: [borrowerId], references: [id], onDelete: Cascade)
  book       Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@map("BorrowingRecord")
}
